<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp"
        >

        <!-- Company Logo -->
        <ImageView
            android:id="@+id/companyLogo"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@mipmap/ic_launcher_foreground"
             />

        <!-- Title -->
        <TextView
            android:id="@+id/paymentReceiptTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Receipt"
            android:textSize="24sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginBottom="20dp" />
    </LinearLayout>

    <!-- Horizontal Line -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@drawable/line"
        app:tint="@color/black"
        android:layout_marginBottom="10dp" />

    <!-- Payment Information Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >

            <!-- Course Name Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"
                android:layout_gravity="start"
                android:layout_marginBottom="10dp" />

            <!-- Course Name Value -->
            <TextView
                android:id="@+id/courseName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12345"
                android:textSize="16sp"
                android:layout_marginBottom="10dp" />

        </LinearLayout>

        <!-- Horizontal Layout for Payment ID and User Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment ID:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="10dp" />
            <TextView
                android:id="@+id/paymentId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Horizontal Layout for User Name and Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginEnd="10dp" />
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Horizontal Layout for User Email and User Number -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginEnd="10dp" />
            <TextView
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="johndoe@example.com"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Horizontal Layout for User Number and Amount Paid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Number:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginEnd="10dp" />
            <TextView
                android:id="@+id/userNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1234567890"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Horizontal Layout for Payment Amount and Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount Paid:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginEnd="10dp" />
            <TextView
                android:id="@+id/paymentAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹5000"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="10dp" />
            <TextView
                android:id="@+id/paymentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25-12-2024 10:30:00"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Horizontal Line -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@drawable/line"
        app:tint="@color/black"
        android:layout_marginBottom="10dp" />

    <!-- Footer Section -->
    <TextView
        android:id="@+id/thankYouMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thank you for your payment!"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="10dp" />

    <!-- Optional: Footer with support or contact -->
    <TextView
        android:id="@+id/supportMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="For support, contact us at organizerclasses.com"
        android:textSize="12sp"
        android:gravity="center" />

</LinearLayout>
